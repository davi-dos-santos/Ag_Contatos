<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azulclaro"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="94dp"
        android:gravity="center"
        app:srcCompat="@drawable/ag_telefonica" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
            <TextView
        android:id="@+id/textName3"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="Nome:" />

            <EditText
        android:id="@+id/et_nome_consulta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Digite seu nome" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

            <TextView
        android:id="@+id/textTelefone3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Telefone:"/>

            <EditText
        android:id="@+id/et_telefone_consulta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="(00) 00000 - 0000" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <TextView
        android:id="@+id/textEmail3"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Email:"/>

        <EditText
        android:id="@+id/et_email_consulta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="exemplo@exemplo.com" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <TextView
        android:id="@+id/textEndereco3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="EndereÃ§o:"/>

        <EditText
        android:id="@+id/et_endereco_consulta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Rua 1"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/textDataNasc3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Data Nasc.:"/>


    <EditText
        android:id="@+id/et_dataNasc_consulta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="01/01/0001"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <Button
        android:id="@+id/Btn_Cadastrar"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="Cadastrar"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/Btn_listar"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dataNasc_consulta" />


    <Button
        android:id="@+id/Btn_listar"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="Listar"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dataNasc_consulta" />
    </LinearLayout>

    <ListView
        android:id="@+id/ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

